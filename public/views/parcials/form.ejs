
<form action="/api/products" method="post">
    <ul class="formulario">
      <h1 class="titulo">Formulario de Productos</h1>
      <div class="mb-3">
          <label for="formGroupExampleInput" class="form-label title">Title:</label>
          <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Name Product" name="title">
        </div>
        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label price">Price:</label>
          <input type="number" class="form-control" id="formGroupExampleInput2" placeholder="Price Product" name="price">
        </div>
        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label picture">Picture Url:</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="https://www.iconfinder.com/free_icons" name="pictureUrl">
        </div>
      <li class="enviar">
        <button type="submit button" class="btn btn-primary">ENVIAR</button>
      </li>
    </ul>
  </form>